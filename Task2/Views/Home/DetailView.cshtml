@using Task2.Models
@{
    ViewBag.Title = "Detail View";
    long id = 0;
    Contact contact;
    try
    {
        if (Request.Params["id"] != null)
        {
            id = long.Parse(Request.Params["id"]);
            contact = MemoryContactRepository.Singleton.Read(id);            
        }
        else
        {
            contact = new Contact();
        }
    }
    catch (FormatException e)
    {
        contact = new Contact();
    }
    
    
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Name: @contact.FirstName @contact.LastName</p>
<p>Position: @contact.JobTitle at @contact.Workplace</p>
<p>Address: <address>@contact.Address</address></p>
<p>Phone number: @contact.PhoneNumber</p>
<p>Date of birth: @contact.Birthday.ToShortDateString()</p>